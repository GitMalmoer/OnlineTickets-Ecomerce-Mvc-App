@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Users";
}

<div class="row">
    <div class="col-md-8 offset-2">
        
        <p>
            <h4 class="text-center">List of all the users</h4>
        </p>

        <table class="table">
            <thead>
            <tr class="text-center">
                <th> @Html.DisplayNameFor(m => m.FullName)</th>
                <th> @Html.DisplayNameFor(m => m.Email)</th>
                <th> @Html.DisplayNameFor(m => m.UserName)</th>
                <th> @Html.DisplayNameFor(m => m.Id)</th>

            </tr>
            </thead>

            <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td class="align-middle">@Html.DisplayFor(m => user.FullName)</td>
                    <td class="align-middle">@Html.DisplayFor(m => user.Email)</td>
                    <td class="align-middle">@Html.DisplayFor(m => user.UserName)</td>
                    <td class="align-middle">@Html.DisplayFor(m => user.Id)</td>
                </tr>
            }
            </tbody>
        </table>


    </div>

</div>